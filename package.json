{
  "name": "alqmc-helper",
  "version": "0.0.1",
  "description": "Work fast and fish happily",
  "main": "./dist/lib/extension.js",
  "activationEvents": [
    "*"
  ],
  "engines": {
    "vscode": "^1.47.0"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "alqmc-helper",
      "properties": {
        "alqmcHelper.componentLibrarydisabled": {
          "type": "array",
          "default": [],
          "description": "禁用组件库提示列表"
        }
      }
    },
    "snippets": [
      {
        "language": "typescript",
        "path": "./packages/snippets/typescript.json"
      }
    ],
    "commands": [
      {
        "command": "alqmc-helper.create-snippets",
        "title": "create-snippets"
      },
      {
        "command": "alqmc-helper.fast-log",
        "title": "fast-log"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "alqmc-helper.create-snippets",
          "when": "editorHasSelection",
          "group": "navigation@1"
        },
        {
          "command": "alqmc-helper.fast-log",
          "when": "editorHasSelection",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "build": "gulp --require sucrase/register/ts --gulpfile build/gulpfile.ts",
    "watch": "gulp --require sucrase/register/ts --gulpfile build/gulpfile.ts watchTask",
    "log": "npm run changelog",
    "changelog": "conventional-changelog -p custom-config  -i CHANGELOG.md  -s -r 0 -n ./changelog.config.js",
    "push": "git push gitee master && git push github master"
  },
  "author": "alqmc",
  "license": "ISC",
  "devDependencies": {
    "@alqmc/build-ts": "^0.0.3",
    "@alqmc/build-utils": "^0.0.3",
    "@alqmc/eslint-config": "^0.0.3",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/gulp": "^4.0.9",
    "@types/node": "^17.0.36",
    "@types/vscode": "^1.67.0",
    "@vue/tsconfig": "^0.1.3",
    "compare-func": "^2.0.0",
    "conventional-changelog-cli": "^2.0.34",
    "conventional-changelog-custom-config": "^0.3.1",
    "cz-conventional-changelog": "^3.2.0",
    "fs-extra": "^10.1.0",
    "gulp": "^4.0.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.6.2",
    "sucrase": "^3.21.0",
    "typescript": "^4.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}